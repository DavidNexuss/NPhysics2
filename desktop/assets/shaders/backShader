uniform float time;
uniform float W;
uniform float H;
uniform float G;
void main(void)
{
    vec2 position = (gl_FragCoord.xy / vec2(W,H));

	vec3 top = vec3(1.0, 1.0, 1.0);
	vec3 bottom = vec3(0.0, 0.0, 0.0);

	gl_FragColor = vec4(mix(bottom, top, position.y*G) 
						* mix(bottom,top,position.x*G) 
						* mix(bottom,top,(1.0 - position.y)*G)
						* mix(bottom,top,(1.0 - position.x)*G),length(position - vec2(0.5,0.5))*5.0);

}
